{
    "root": true,
    "extends": ["airbnb-base", "eslint:recommended", "prettier"],
    "parser": "babel-eslint",
    "env": {
        "browser": false
    },
    "globals": {
        "describe": true,
        "it": true,
        "beforeEach": true,
        "afterEach": true,
        "expect": true,
        "jest": true,
        "context": true
    },
    "rules": {
        "no-const-assign": 1,
        "no-this-before-super": 1,
        "no-undef": 1,
        "no-unreachable": 1,
        "no-unused-vars": 1,
        "constructor-super": 1,
        "valid-typeof": 1,
        "quotes": [2, "single", "avoid-escape"],
        "semi": [2, "always"],
        "eqeqeq": [2, "always"],
        "one-var": [2, "never"],
        "comma-dangle": [2, "always-multiline"],
        "newline-per-chained-call": 0,
        "indent": [2, 2, { "SwitchCase": 1 }],
        "max-len": 0,
        "dot-notation": 0,
        "linebreak-style": 0,
        "object-curly-newline": 0,
        "function-paren-newline": 0,
        "prefer-promise-reject-errors": 0,
        "no-param-reassign": [2, { "props": false }],
        "spaced-comment": [2, "always", { "exceptions": ["?"] }],
        "no-console": 1
    }
}
